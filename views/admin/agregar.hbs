<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un producto al menu</h4>
            <form action="/admin/menu/agregar" method="post">
                <div class="form-group">
                    <input type="text" placeholder="titulo" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="contenido" class="form-control" name='cuerpo'>
                </div>
                <button type="submit" class="btn btn-danger">Agregar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>